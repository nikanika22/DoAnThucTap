<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".view.AddMovieActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Phim Mới"
            android:textSize="24sp"
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin phim vào các trường bên dưới"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên phim *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="Nhập tên phim"
            android:inputType="text"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời lượng (phút) *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="VD: 120"
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể loại *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL Poster"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="https://example.com/poster.jpg"
            android:inputType="textUri"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã độ tuổi"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lưu Phim"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#E91E63"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Hủy bỏ"
            android:textColor="#666666"
            android:textSize="14sp"
            android:backgroundTint="#E0E0E0"/>

    </LinearLayout>

</ScrollView>