<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".view.UpdateShowtimeActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa Suất Chiếu"
            android:textSize="24sp"
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin suất chiếu"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn phim *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/spinnerMovie"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn phòng chiếu *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/spinnerScreen"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày chiếu *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="Nhấn để chọn ngày"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ bắt đầu *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/edtStartTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="Nhấn để chọn giờ"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giờ kết thúc *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/edtEndTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="Nhấn để chọn giờ"
            android:inputType="none"
            android:focusable="false"
            android:clickable="true"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá vé (VND) *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="VD: 80000"
            android:inputType="number"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/spinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cập Nhật Suất Chiếu"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#E91E63"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Hủy bỏ"
            android:textColor="#666666"
            android:textSize="14sp"
            android:backgroundTint="#E0E0E0"/>

    </LinearLayout>

</ScrollView>
