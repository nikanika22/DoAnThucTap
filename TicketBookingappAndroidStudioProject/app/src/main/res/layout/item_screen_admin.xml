<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtScreenName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Screen 1 - VIP"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/txtScreenCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mã: SCR-001"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/txtScreenName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtScreenFormat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IMAX · 12 x 15 ghế"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/txtScreenCode"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtScreenStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đang hoạt động"
        android:textSize="13sp"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/txtScreenFormat"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/btnEditScreen"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/icon_sua"
        android:padding="4dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteScreen"
        android:layout_marginEnd="40dp" />

    <ImageView
        android:id="@+id/btnDeleteScreen"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/icon_xoa"
        android:padding="4dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
