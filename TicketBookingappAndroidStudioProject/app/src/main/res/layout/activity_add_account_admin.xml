<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".view.AddAccountActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Tài Khoản"
            android:textSize="24sp"
            android:textColor="#1a1a1a"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin tài khoản mới"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="example@email.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Phone -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="0123456789"
            android:inputType="phone"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Full Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="Nguyễn Văn A"
            android:inputType="textPersonName"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu *"
            android:textColor="#1a1a1a"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_simple"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:paddingHorizontal="12dp"
            android:textColor="#1a1a1a"
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- Buttons -->
        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Lưu Tài Khoản"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#E91E63"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Hủy bỏ"
            android:textColor="#666666"
            android:textSize="14sp"
            android:backgroundTint="#E0E0E0"/>

    </LinearLayout>

</ScrollView>